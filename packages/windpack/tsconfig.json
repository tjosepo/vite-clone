{
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "outDir": "dist",
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "allowSyntheticDefaultImports": true
  }
}